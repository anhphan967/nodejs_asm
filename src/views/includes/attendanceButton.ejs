<div class="attendace-wrapper">
    <div class="text-center">
        <div class="btn-group" role="group" aria-label="Basic example">
            <form action="/attendance/start" method="GET">
                <button <%=isStarted ? 'disabled' : comfirmed ? 'disabled' :isStarted===null ? '' : '' %>
                    class="btn  btn-outline-dark m-3" type="submit">Điểm Danh
                </button>
                <input type="hidden" name="mode" value="start">
                <input type="hidden" name="_csrf" value="<%=csrfToken%>">
            </form>
            <form action="/attendance/end" method="POST">
                <input type="hidden" name="_csrf" value="<%=csrfToken%>">  
                <button <%=isStarted ? '' : isStarted===null ? '' : 'disabled' %>
                    class="btn  btn-outline-dark m-3" type="submit">Kết Thúc Làm việc
                </button>
                <input type="hidden" name="mode" value="end">
            </form>
            <form action="/attendance/leaveForm" method="GET">
                <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                <button <%=comfirmed ?  'disabled':'' %> class="btn  btn-outline-dark m-3" type="submit">Nghỉ Phép</button>
            </form>
        </div>
    </div>